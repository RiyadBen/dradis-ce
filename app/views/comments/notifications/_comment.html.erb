<% commentable = comment.commentable %>
<% if commentable.title? %>
  commented on the
  <%= link_to commentable.title,
    presenter.comment_path(anchor: true),
    data: { turbolinks: false }
  %>
  <%= commentable.commentable_display_name %>.
<% else %>
  commented on
  <%= link_to "#{commentable.commentable_display_name} ##{commentable.id}",
    presenter.comment_path(anchor: true),
    data: { turbolinks: false }
  %>.
<% end %>
